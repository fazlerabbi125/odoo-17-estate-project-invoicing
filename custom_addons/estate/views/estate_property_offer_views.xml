<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offers"
                  decoration-success="state == 'accepted'"
                  decoration-danger="state == 'refused'"
                  create="0"
                  edit="0"
            >
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="price"/>
                <field name="state"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer"
                  create="0"
                  edit="0"
            >
                <sheet>
                    <field name="state" invisible="1"/>
                    <widget name="web_ribbon" title="Accepted"
                            invisible="state != 'accepted'"/>
                    <widget name="web_ribbon" title="Refused"
                            bg_color="text-bg-danger"
                            invisible="state != 'refused'"/>
                    <group>
                        <group>
                            <field name="property_id" />
                            <field name="partner_id" />
                            <field name="price" />
                        </group>
                        <group>
                            <field name="validity" />
                            <field name="date_deadline" />
                            <field name="currency_id" />
                            <field name="property_type_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_view_graph" model="ir.ui.view">
        <field name="name">estate.property.graph</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <graph disable_linking="1">
                <field name="currency_id" invisible="1"/>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="price" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form,graph</field>
    </record>

    <record id="estate_property_type_offers_action" model="ir.actions.act_window">
        <field name="name">Offers of different categories</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id','=',active_id)]</field>
        <field name="target">new</field>
    </record>
</odoo>